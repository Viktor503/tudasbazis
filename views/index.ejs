<!DOCTYPE html>
<html lang ="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title><%= title %></title>
</head>
<body class="bg-indigo-500">
    <%- include('header') %>

    <% if (user) { %>
        <p class="text-3xl text-center justify-center items-center text-white p-4">Üdvözlünk az oldalon <%= user.nev %>!</p>
    <% } else  { %>
        <p class="text-3xl text-center justify-center items-center text-white p-4">Üdvözlünk az oldalon!</p>
    <% } %>
    <div class="flex justify-center p-5 mx-auto my-0 w-4/5 rounded">
        <table class="table-auto">
            <thead>
                <tr>
                    <th colspan="3" class="px-4 py-2 border bg-orange-600 text-white text-2xl">Legutóbb létrehozott cikkek</th>
                </tr>
            </thead>
            <tbody>
                <% 
                    legutobbiCikkek.forEach(cikk => {
                %>
                <tr class="px-4 py-2 border bg-slate-500 hover:bg-slate-700 text-white cursor-pointer text-center" onclick="location.href='/cikkek/<%= cikk.AZON %>'">
                    <td class="px-4 py-2">
                        <p><%= cikk.CIM %></p>
                    </td>
                    <td class="px-4 py-2">
                        <p><%= cikk.TARTALOM %></p>
                    </td>
                    <td class="px-4 py-2">
                        <p><%= cikk.SZERZO %></p>
                    </td>
                </tr>
                <% }) %>

            </tbody>
        </table>
    </div>

    <div class="flex justify-center p-5 mx-auto my-0 w-4/5 rounded">
        <table class="table-auto">
            <thead>
                <tr>
                    <th colspan="3" class="px-4 py-2 border bg-orange-600 text-white text-2xl">Cikkek nyelv szerinti sorrendje</th>
                </tr>
            </thead>
            <tbody>
                <% 
                    nyelv.forEach(sor => {
                %>
                <tr class="px-4 py-2 border bg-slate-500 hover:bg-slate-700 text-white cursor-pointer text-center" onclick="location.href='/cikkek/<%= sor.AZON %>'">
                    <td class="px-4 py-2">
                        <p><%= sor.CIM %></p>
                    </td>
                    <td class="px-4 py-2">
                        <p><%= sor.NYELVSZÁM %></p>
                    </td>
                </tr>
                <% }) %>

            </tbody>
        </table>
    </div>



